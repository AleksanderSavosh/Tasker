<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_activity_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/card_view_background">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

        <TextView
                android:id="@+id/main_activity_card_view_title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingTop="8dp"
                android:paddingBottom="6dp"
                android:textSize="24sp"
                android:textColor="@color/primary_text"/>

        <TextView
                android:id="@+id/main_activity_card_view_text_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_activity_card_view_title_text_view"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textSize="14sp"
                android:textColor="@color/primary_text"/>

        <TextView
                android:id="@+id/main_activity_card_view_create_date_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/main_activity_card_view_text_text_view"
                android:paddingTop="6dp"
                android:paddingBottom="8dp"
                android:textColor="@color/secondary_text"
                android:gravity="end"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>