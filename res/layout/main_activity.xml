<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/main_background">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/main_activity_recycler_view"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>



    <com.aleksander.savosh.tasker.view.ColorfulProgressBar
            android:id="@+id/main_activity_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:progressBarSizeInPercent="15"
            app:progressBarRedrawTime="750"
            android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/main_activity_create_notice_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_white_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            app:fabSize="mini"
            app:elevation="4dp"
            app:pressedTranslationZ="12dp"
            app:borderWidth="0dp"
            android:visibility="gone"/>

</RelativeLayout>

