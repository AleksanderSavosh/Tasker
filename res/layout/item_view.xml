<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:layout_margin="8dp"
                android:background="#ffe8e8e8">

    <ImageView android:id="@+id/mess_logo"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_alignParentBottom="true"
               android:layout_alignParentTop="true"
               android:layout_margin="4dp"
               android:paddingTop="8dp"
               android:paddingBottom="8dp"
               android:contentDescription="@string/app_name"
               android:tint="@android:color/background_dark"
            android:src="@drawable/two185"/>

    <RelativeLayout
            android:id="@+id/mess_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/mess_logo"
            android:layout_gravity="top"
            android:orientation="horizontal"
            >

        <ImageView
                android:id="@+id/mess_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:src="@drawable/delete81"/>

        <TextView android:id="@+id/mess_value"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:layout_toLeftOf="@id/mess_delete"
                  android:textColor="#ff000000"
                  android:text="@string/add_description"/>



    </RelativeLayout>





    <ProgressBar
            android:id="@+id/priority_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_toRightOf="@id/mess_logo"
            android:layout_below="@id/mess_top"
            android:layout_margin="4dp"
            android:max="10"
            android:progress="10"

            android:layout_marginRight="5dp" />

    <TextView android:id="@+id/mess_create_date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="12sp"
              android:layout_margin="4dp"
              android:layout_alignParentRight="true"
              android:textColor="#ff555250"
              android:layout_alignParentBottom="true"
            android:text="15.02.2015"/>

</RelativeLayout>